
@{
    Layout = null;
}
@model List<Dept>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h1>Index Page</h1>
        @Html.ActionLink("Create New","create")
        <table>
            <tr>
                <th>Dept ID</th>
                <th>Dept Name</th>
                <th>HOD</th>
                <th></th>
            </tr>
           @foreach (var item in Model)
           {
            <tr>
                <td>@Html.ValueFor(u => item.Did)</td>
                <td>@Html.ValueFor(u => item.DName)</td>
                <td>@Html.ValueFor(u => item.HOD)</td>
                <td>
                    @Html.ActionLink("Edit", "edit", new { did=item.Did })|@Html.ActionLink("Details", "details", new { did = item.Did })|
                    @Html.ActionLink("Delete", "delete", new { did = item.Did })
                </td>
            </tr>
    
           }
        </table>
    </div>
</body>
</html>
